<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tela de navegação para desenvolvimento"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textSize="30sp"
        />


    <Button
        android:id="@+id/button_activityPatient"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:text="Paciente Activity"
        android:gravity="center"
        android:layout_gravity="center"
        ></Button>

    <Button
        android:id="@+id/button_activityMap"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:text="Map Activity"
        android:gravity="center"
        android:layout_gravity="center"
        ></Button>

    <Button
        android:id="@+id/button_activityLogin"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:text="Login Activity"
        android:gravity="center"
        android:layout_gravity="center"
        ></Button>

    <Button
        android:id="@+id/button_activityEditor"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Editor Activity"
        ></Button>

</LinearLayout>